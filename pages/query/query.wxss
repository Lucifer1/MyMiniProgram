page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.input-wrapper {
  width: 100vw;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
  position: fixed;
  background-color: #ffffff;
}

.search-icon {
  position: absolute;
  left: 64rpx;
}

.input {
  width: calc(100vw - 200rpx);
  flex-grow: 0;
  height: 80rpx;
  background-color: #F5F5F5;
  border-radius: 80rpx;
  padding: 0 96rpx;
  margin-left: 10rpx;
}

.close-placeholder {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 38rpx;
  z-index: 999;
}

.close-icon {
  position: absolute;
  right: 60rpx;
}

.search-list {
  position: absolute;
  box-sizing: border-box;
  width: 100vw;
  padding: 0 32rpx;
  height: calc(100vh - 100rpx);
  top: 100rpx;
  background-color: #ffffff;
}

.search-list-item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 5rpx solid #f3f3f3;
}

.content {
  width: 100vw;
  flex: 1;
  display: flex;
}

.product-list {
  width: 25%;
  position: fixed;
  top: 100rpx
}

.list-item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}

.item-text {
  display: inline-block;
  line-height: 36rpx;
  width: 100%;
}

.item-text-active {
  border-left: 10rpx solid #fd810d;
}

.product-detail {
  width: 100%;
  margin-top: 100rpx;
  margin-left: 25%;
  flex: 1;
  padding: 0 16rpx 100rpx;
  flex-wrap: wrap;
}

.detail-item {
  flex-grow: 1;
  height: 240rpx;
  background-color: #f3f3f3;
  margin: 32rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.product-img {
  width: 200rpx;
  height: 200rpx;
}

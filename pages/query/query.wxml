<view class="input-wrapper">
  <icon class="search-icon" type="search" size="50rpx"></icon>
  <view class="input" bindtap="jumpToSearch"></view>
</view>
<view class="content">
  <view class="product-list">
    <view class="list-item" wx:for="{{productList}}" wx:key="index" bindtap="changeProduct" data-index="{{index}}">
      <view class="item-text {{activeIndex === index ? 'item-text-active' : ''}}">{{item.type}}</view>
    </view>
  </view>
  <view class="product-detail">
    <view class="detail-item" wx:for="{{productList[activeIndex].list}}" wx:key="index">
      <image class="product-img" src="/images/activity_add.png" mode=""/>
      <view>{{item}}</view>
    </view>
  </view>
</view>
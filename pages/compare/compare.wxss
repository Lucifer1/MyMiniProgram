.compare-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.input {
  width: 520rpx;
  height: 150rpx;
  line-height: 150rpx;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.3);
  border-radius: 50rpx;
  text-align: center;
  margin-top: 150rpx;
  font-size: 50rpx;
}

.text-content {
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 420rpx;
}

.text-placeholder {
  color: #909090;
}

.input2 {
  margin-top: 100rpx;
}

.font {
  margin-top: 100rpx;
  font-size: 120rpx;
}

.search-button {
  width: 150rpx;
  height: 100rpx;
  background-color: #f5885e;
  line-height: 100rpx;
  text-align: center;
  border-radius: 20rpx;
  margin-top: 100rpx;
  color: white
}

.query-wrapper {
  position: fixed;
  top: 0;
}

.query-content {
  width: 100vw;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.query-icon {
  position: absolute;
  left: 64rpx;
}

.query-input {
  width: calc(100vw - 200rpx);
  flex-grow: 0;
  height: 80rpx;
  background-color: #F5F5F5;
  border-radius: 80rpx;
  padding: 0 96rpx;
  margin-left: 10rpx;
}

.close-placeholder {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 38rpx;
  z-index: 999;
}

.close-icon {
  position: absolute;
  right: 60rpx;
}

.search-list {
  position: absolute;
  box-sizing: border-box;
  width: 100vw;
  padding: 0 32rpx;
  height: calc(100vh - 100rpx);
  top: 100rpx;
  background-color: #ffffff;
}

.search-list-item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 5rpx solid #f3f3f3;
}

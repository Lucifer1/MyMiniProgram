page {
  background-color: #f8f8f8;
}

.product-container {
  padding-bottom: 240rpx;
  box-sizing: border-box;
}

.product-container-with-module {
  height: 100vh;
  overflow: hidden;
}

.swiper-wrapper {
  width: 100vw;
  height: 100vw;
}

.banner-img {
  width: 100vw;
}

.money-wrapper {
  background-color: #FFFFFF;
  padding: 20rpx 32rpx;
}

.monery-icon {
  color: #ff6539;
  font-size: 28rpx;
}

.money {
  color: #ff6539;
  font-size: 36rpx;
  margin-left: 8rpx;
  margin-right: 4rpx;
}

.title-wrapper {
  position: relative;
}

.product-title {
  display: inline-block;
  font-size: 36rpx;
  font-weight: bold;
}

.service-wrapper {
  margin-top: 16rpx;
  background-color: #FFFFFF;
  padding: 20rpx 32rpx;
}

.service-icon {
  color: #909090;
  font-size: 30rpx;
}

.service-content {
  font-size: 30rpx;
  margin-left: 24rpx;
}

.product-detail-wrapper {
  width: 100vw;
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  margin-top: 16rpx;
}

.detail-title {
  width: 100vw;
  margin: 32rpx 0;
  text-align: center;
}

.detail-title-decorate {
  color: #909090;
}

.detail-title-content {
  font-weight: 600;
}

.detail-img {
  width: 100vw;
}

.purchase-button-wrapper {
  width: 100vw;
  height: 108rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
  position: fixed;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.purchase-button {
  width: calc(100vw - 64rpx);
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 88rpx;
  background-color: #ff6539;
  color: #FFFFFF;
}

.variant-module-wrapper {
  position: fixed;
  z-index: 1;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.variant-module {
  position: relative;
  width: 100vw;
  max-height: 1000rpx;
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #FFFFFF;
  position: fixed;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  padding-top: 32rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.variant-title-wrapper {
  display: flex;
}

.variant-image {
  width: 160rpx;
  border-radius: 16rpx;
}

.variant-title-content {
  margin-left: 16rpx;
}

.variant-title {
  font-weight: 600;
}

.variant-button-wrapper {
  width: 100%;
  height: 108rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
  position: fixed;
  left: 0;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.variant-button {
  width: calc(100vw - 64rpx);
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 88rpx;
  /* background-color: #ff6539; */
  background-color: black;
  color: #FFFFFF;
}

.variant-content {
  width: 100%;
  margin-top: 32rpx;
  padding-bottom: 150rpx;
}

.variant-name {
  font-weight: 600;
  margin-bottom: 28rpx;
}

.variant-detail-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.variant-detail {
  height: 48rpx;
  background-color: #eeeeee;
  padding: 8rpx 16rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.variant-disable {
  color: #cccccc;
}

.variant-detail-active {
  color: #ff830f;
  background-color: #faefd8;
}

.number-wrapper {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 150rpx;
  height: 60rpx;
  border-radius: 60rpx;
  border: 1rpx solid #e6e6e6;
  padding: 0 8rpx;
}

.number-item {
  height: 60rpx;
  line-height: 60rpx;
  flex: 1;
  text-align: center;
}

.decline {
  border-right: 1rpx solid #e6e6e6;
}

.number {
  padding: 0 8rpx;
}

.plus {
  border-left: 1rpx solid #e6e6e6;
}

.disable {
  color: #cccccc;
}

<view class="info-wrapper">
  <view class="header-wrapper">
      <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
      <image class="avatar" src="{{avatarUrl}}"></image>
    </button>
    <input type="nickname" class="nickname-input" placeholder="昵称" bindblur="nicknameConfirm" value="{{nickname}}" />
  </view>
  <view class="info-list">
    <view class="list-item">
      <image class="item-icon" src="/images/order.png" mode="widthFix"/>
      <text>我的订单</text>
    </view>
    <view class="list-item">
      <image class="item-icon" src="/images/address.png" mode="widthFix"/>
      <text>收货地址</text>
    </view>
  </view>
</view>
.input-placeholder {
  position: fixed;
  top: 0;
  background-color: #ffffff;
}

.list-container {
  margin-top: 100rpx;
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  padding: 32rpx 32rpx 240rpx;
  box-sizing: border-box;

}

.list-item {
  width: 47%;
  border: 1px solid #000;
  margin-bottom: 20rpx;
}

.list-item:nth-child(odd) {
  margin-right: 16rpx;
}

.list-item:nth-child(even) {
  margin-left: 16rpx;
}

.product-img {
  width: 100%;
}

.product-name {
  font-size: 38rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}

.price-icon {
  font-size: 26rpx;
  color: rgb(214, 48, 48);
}

.product-price {
  font-size: 32rpx;
  color: rgb(214, 48, 48);
}

.sell-number {
  font-size: 24rpx;
  color: rgb(150, 149, 149);
  margin-left: 8rpx;
}

.cart-icon-wrapper {
  border: 1px solid #000;
  margin-right: 14rpx;
  padding: 8rpx;
  border-radius: 50%;
}

.cart-icon {
  display: block;
  width: 35rpx;
}

.query-wrapper {
  position: fixed;
  top: 0;
}

.query-content {
  width: 100vw;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.query-icon {
  position: absolute;
  left: 64rpx;
}

.query-input {
  width: calc(100vw - 200rpx);
  flex-grow: 0;
  height: 80rpx;
  background-color: #F5F5F5;
  border-radius: 80rpx;
  padding: 0 96rpx;
  margin-left: 10rpx;
}

.close-placeholder {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 38rpx;
  z-index: 999;
}

.close-icon {
  position: absolute;
  right: 60rpx;
}

.search-list {
  position: absolute;
  box-sizing: border-box;
  width: 100vw;
  padding: 0 32rpx;
  height: calc(100vh - 100rpx);
  top: 100rpx;
  background-color: #ffffff;
}

.search-list-item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 5rpx solid #f3f3f3;
}
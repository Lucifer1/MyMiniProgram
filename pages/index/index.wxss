page {
  background-color: #f8f8f8;
  padding-bottom: 240rpx;
}

.swiper-wrapper {
  width: 100vw;
  height: 400rpx;
}

.banner-img {
  width: 100vw
}


.wrapper {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-around; */
  background-color: #f8f8f8;
}

.content {
  flex-shrink: 0;
  flex-grow: 1;
  /* display: inline-block; */
  width: 48%;
  height: 300rpx;
  border: 1px solid #f3f3f3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1); */
}

.module-icon {
  width: 100rpx;
}

.more-content {
  padding: 50rpx 32rpx 0;
}

.title-wrapper {
  display: flex;
  /* justify-content: center; */
  align-items: center;
  margin-top: 20rpx;
}

.border-line {
  width: 10rpx;
  height: 40rpx;
  background-color: #fd810d;
  margin: 0 20rpx 0 10rpx;
}

.title {
  font-size: 50rpx;
}

.article-wrapper {
  padding: 24rpx 32rpx;
}

.article-title {
  font-size: 40rpx;
  margin-bottom: 16rpx;
  text-decoration: underline;
}

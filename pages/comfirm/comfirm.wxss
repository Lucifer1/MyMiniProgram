page {
  background-color: #f8f8f8;
  padding-bottom: 240rpx;
  box-sizing: border-box;
}

.wrapper {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-top: 24rpx;
  box-sizing: border-box;
  padding: 24rpx;
  margin: 24rpx 24rpx 0;
}

.nickName {
  display: inline-block;
  font-weight: bold;
  margin-right: 40rpx;
  font-size: 32rpx;
}

.phone {
  display: inline-block;
  font-weight: bold;
  font-size: 28rpx;
}

.change-address {
  float: right;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  text-align: center;
  border: 1px solid #d6d6d6;
  font-size: 28rpx;
}

.address {
  margin-top: 16rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-list {}

.product-item {
  display: flex;
  margin-top: 30rpx;
}

.product-img {
  width: 200rpx;
  border-radius: 24rpx;
}

.product-content {
  flex: 1;
  margin-left: 16rpx;
}

.product-title {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.price-and-number {
  display: flex;
  justify-content: space-between;
}

.money-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.money-item:last-child {
  margin-bottom: 0;
}

.price-wrapper {
  width: 100vw;
  box-sizing: border-box;
  line-height: 100rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
}

.purchase-button-wrapper {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.total-price-icon {
  display: inline-block;
  font-size: 30rpx;
  color: rgb(214, 48, 48);
  margin-left: 15rpx;
}

.total-product-price {
  display: inline-block;
  font-size: 34rpx;
  color: rgb(214, 48, 48);
}

.purchase-button {
  color: #ffffff;
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 80rpx;
  background-color: #e65502;
  font-size: 30rpx;
  margin-left: 16rpx;
  margin-top: 16rpx;
}
